<Window x:Class="WpfApp1.Show"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Show" Height="350" Width="300">
    <Grid>
        <ComboBox x:Name="cmbBox_ShowJob" HorizontalAlignment="Left" Margin="83,116,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem IsSelected="True" Content="Jobs"></ComboBoxItem>
            <ComboBoxItem Content="Resources"></ComboBoxItem>
            <ComboBoxItem Content="ResourceTypes"></ComboBoxItem>
            <ComboBoxItem Content="Users"></ComboBoxItem>
        </ComboBox>
        <Button x:Name="btn_Show" Content="Show" HorizontalAlignment="Left" Margin="174,206,0,0" VerticalAlignment="Top" Width="75" Click="btn_Show_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="48,78,0,0" TextWrapping="Wrap" Text="Choose you want shown:" VerticalAlignment="Top"/>
        <Button x:Name="btn_Return" Content="Return" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btn_Return_Click"/>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="26,159,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
